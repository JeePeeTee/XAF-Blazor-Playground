@using DevExpress.Blazor
@using Microsoft.AspNetCore.Components.Web

<DxTimeEdit Time="@ComponentModel.Value"
            Format="HH:mm"
            TimeChanged="@((TimeSpan newValue) => ComponentModel.SetValueFromUI(newValue))"
            DisplayFormat="HH:mm"></DxTimeEdit>

@code {
    [Parameter]
    public DXTimeSpanModel ComponentModel { get; set; }
    public static RenderFragment Create(DXTimeSpanModel componentModel) =>@<DXTimeEditor ComponentModel=@componentModel />;
}
