@using DevExpress.Blazor
<DxTimeEdit @bind-Time="@ComponentModel.Value"
             Format="HH:mm"
             DisplayFormat="HH:mm"
             Enabled=@ComponentModel.ReadOnly
             Attributes=@ComponentModel.Attributes.ToDictionary(s=>s.Key, s=>s.Value)>
</DxTimeEdit>

